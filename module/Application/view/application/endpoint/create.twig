{% if error == false %}
    Make sure to copy your new personal access token now. You won't be able to see it again! <br>

    API key: <input type="text" value="{{ api_key }}" style="width: 100%;"> <br>

    <a href="{{ gist_html_url }}" target="_blank" rel="nofollow">Gist</a>

    <textarea style="width: 100%; height: 100px;">
    {{ spaceapi_json }}
    </textarea>

    <script>
        // proof of concept, the code will be made maintainable
        $(document).ready(function(){
            $('#validate').click(function(){
                var url = $(this).attr('href');
                $.get('http://spaceapi.net/validate?url=' + url, function(data){
                    $("#validate_result").text(JSON.stringify(data));
                });
                return false;
            });
        });
    </script>

    <a id="validate" href="{{ gist_raw_url }}}" target="_blank">Validate</a>
    <div id="validate_result"></div>
{% else %}
    The endpoint could not be created. Maybe it already exists?
{% endif %}